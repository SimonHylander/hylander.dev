---

<script>
import type { log } from "astro/dist/core/logger/core";

	window.addEventListener('load', (event) => {

		setTimeout(() => {
			const elem = document.getElementById('job-title');
			if (elem) {
				elem.classList.remove('opacity-0');
				elem.classList.add('opacity-100');
			}
		}, 2000)

		setTimeout(() => {
			const elem = document.getElementById('goat');
		
			if (elem) {
				elem.classList.remove('opacity-0');
				elem.classList.add('opacity-30');
			}
		}, 2500);

		setTimeout(() => {
			const elem = document.getElementById('developer');
			
			if (elem) {
				elem.classList.remove('opacity-0');
				elem.classList.add('opacity-30');
			}
		}, 3000)

		setTimeout(() => {
			const elem = document.getElementById('techstack');

			if (elem) {
				elem.classList.remove('opacity-0');
				elem.classList.add('opacity-100');
			}
		}, 4500)
	});
</script>

