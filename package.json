{
  "name": "hylander.dev",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "portfolio:dev": "turbo dev --filter=@hylanderdev/portfolio",
    "portfolio:build": "turbo build --filter=@hylanderdev/portfolio",
    "shadcn:add": "cd packages/ui && pnpm dlx shadcn@latest add $1"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
