{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "portfolio:dev": "turbo dev --filter=@hylanderdev/portfolio",
    "portfolio:build": "turbo build --filter=@hylanderdev/portfolio",
    "shadcn:add": "cd packages/ui && pnpm dlx shadcn@latest add $1"
  },
  "devDependencies": {
    "@hylanderdev/eslint-config": "workspace:*",
    "@hylanderdev/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
